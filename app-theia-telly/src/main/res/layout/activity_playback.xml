<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="org.opensilk.video.telly.PlaybackActivity"
        tools:deviceIds="tv">
    <data>

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">
        <!--
          the double FrameLayout is necessary here to do cropping on the bottom right
          (which requires the surface not be centered), while keeping the result centered
         -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/player_surface_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="clip_horizontal|clip_vertical">

                <SurfaceView
                    android:id="@+id/player_surface"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>

                <SurfaceView
                    android:id="@+id/subtitles_surface"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>
            </FrameLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layoutDirection="ltr">

            <TextView
                android:id="@+id/media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="title"
                android:textSize="34sp"
                style="?android:textAppearanceLarge"/>

            <TextView
                android:id="@+id/system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                style="?android:textAppearanceLarge"
                tools:text="10:12"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#66000000"
            android:layout_marginStart="132dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="20dp"
            android:layoutDirection="ltr">

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:layoutDirection="ltr"
                android:progressDrawable="@drawable/lb_playback_progress_bar"
                tools:progress="50"/>

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/progress"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                style="?attr/playbackControlsTimeStyle"
                tools:text="0:0"/>

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/progress"
                android:layout_marginEnd="16dp"
                android:paddingTop="8dp"
                style="?attr/playbackControlsTimeStyle"
                tools:text="123:33"/>

            <LinearLayout
                android:id="@+id/control_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress"
                android:paddingTop="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/action_captions"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lb_ic_cc"
                    style="?playbackControlsButtonStyle"
                    android:background="?android:selectableItemBackgroundBorderless"/>

                <ImageButton
                    android:id="@+id/action_rewind"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lb_ic_fast_rewind"
                    style="?playbackControlsButtonStyle"
                    android:background="?android:selectableItemBackgroundBorderless"/>

                <ImageButton
                    android:id="@+id/action_play_pause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lb_ic_play"
                    style="?playbackControlsButtonStyle"
                    android:background="?android:selectableItemBackgroundBorderless"/>

                <ImageButton
                    android:id="@+id/action_fast_forward"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lb_ic_fast_forward"
                    style="?playbackControlsButtonStyle"
                    android:background="?android:selectableItemBackgroundBorderless"/>

                <ImageButton
                    android:id="@+id/action_pip"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lb_ic_pip"
                    style="?playbackControlsButtonStyle"
                    android:background="?android:selectableItemBackgroundBorderless"/>


            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>
