<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.opensilk.video.telly">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false"/>
    <uses-feature
        android:name="android.software.leanback"
        android:required="true"/>

    <application
        android:name=".VideoApp"
        android:allowBackup="true"
        android:banner="@drawable/silk_video_banner"
        android:icon="@drawable/silk_video_banner"
        android:label="@string/app_name"
        android:logo="@drawable/silk_video_banner"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".HomeActivity"
            android:icon="@drawable/silk_video_banner"
            android:label="@string/app_name"
            android:logo="@drawable/silk_video_banner"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Leanback.Browse">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".FolderActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Leanback.VerticalGrid"/>

        <service android:name=".UpnpHolderService"/>
    </application>

</manifest>