<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- END THEMES -->

    <style name="Artwork">
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/accessibility_artwork</item>
    </style>

    <style name="Artwork.Thumbnail">
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Tiles -->

    <style name="GalleryGridTile">
    </style>

    <style name="GalleryListTile">

    </style>

    <style name="GridTileDescriptionLight">
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="GridTileDescriptionDark">
        <item name="android:background">@color/grey_900</item>
    </style>

    <style name="GridTileDescriptionTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridTileDescriptionTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceInverse</item>-->
    </style>

    <style name="GridTileDescriptionTitle.Dark">
    </style>

    <style name="GridTileDescriptionSubTitle" parent="SingleLineTextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GridTileDescriptionSubTitle.Light">
        <!--<item name="android:textAppearance">?android:textAppearanceSmallInverse</item>-->
    </style>

    <style name="GridTileDescriptionSubTitle.Dark">

    </style>


    <style name="BtnMore" parent="Widget.AppCompat.ActionButton">
        <!--<item name="android:src">@drawable/more_grey600_24dp</item>-->
        <item name="android:contentDescription">@string/accessibility_more</item>
    </style>

    <style name="DragHandle" parent="Widget.AppCompat.ActionButton">
        <!--<item name="android:src">@drawable/drag_vertical_grey600_24dp</item>-->
        <item name="android:contentDescription">@string/accessibility_drag</item>
    </style>

    <!-- end tiles -->

</resources>
